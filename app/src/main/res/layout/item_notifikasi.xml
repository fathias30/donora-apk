<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="90dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:backgroundTint="#40D9D9D9"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconrs"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                app:srcCompat="@drawable/hijau_sukses" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="26dp">

            <TextView
                android:id="@+id/UTD"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rbold"
                android:text="Selamat, yaaa!"
                android:textColor="#2B2D42"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/alamat"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rmedium"
                android:text="Vouchermu berhasil diklaim!"
                android:textColor="#2B2D42"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/bulan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/rmedium"
                android:gravity="center"
                android:text="10 Jan"
                android:textColor="#602B2D42"
                android:textSize="9dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>